@page
@model WebUI.Pages.ThermalConductivityPages.CreateModel

<div class="bg-light">
	<form method="post">
		<div class="row pl-3">
			<div class="col-6 mx-3">
				<div class="fs-1 mb-5">
					Ďalšia tepelná vodivosť
				</div>
			</div>
		</div>
		<div class="p-5">
			<div classs="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Materiál:</label>
				<input asp-for="ThermalConductivityDto.Name" class="form-control fs-4" />
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:35%">
				<label class="fs-4 m-3">Tepelná&nbsp;vodivosť:</label>
				<input id="thermalConductivity" asp-for="ThermalConductivityDto.Value" class="form-control fs-4 w-25" style="text-align:right" oninput="realNumberValidation(this)" />
				<div class="fs-4 my-3 mx-2">W/mK</div>
			</div>
		</div>
		<button type="submit" class="btn btn-secondary float-sm-start m-3">Potvrď</button>
	</form>
</div>
