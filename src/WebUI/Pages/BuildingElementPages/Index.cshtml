@page
@model WebUI.Pages.BuildingElementPages.IndexModel

<div class="conainer p-3 bg-light border">
	<div class="row py-0">
		<div class="col-6 px-3">
			<div class="display-4 mb-5">
				Stavebné konštrukcie
			</div>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-secondary">
				Ďalšia stavebná konštrukcia
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th class="fs-4 text-decoration-none px-6">Podlažie</th>
				<th class="fs-4 text-decoration-none px-6">Priestor</th>
				<th class="fs-4 text-decoration-none px-6">Teplota</th>
				<th class="fs-4 text-decoration-none px-6">Stavebná konštrukcia</th>
				<th class="fs-4 text-decoration-none px-6">Účinná plocha</th>
				<th class="fs-4 text-decoration-none px-6">Vedľajší priestor</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var buildingElement in Model.BuildingElementsList)
			{
				<tr>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.StoreyName</td>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.SpaceName</td>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.Temperature °C</td>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.Name</td>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.EffectiveArea m<sup>2</sup></td>
					<td class="fs-4 text-black text-decoration-none px-2">@buildingElement.ContiguousSpaceName</td>
					<td class="fs-5 text-decoration-none px-2">
						<a asp-page="Edit" asp-route-id="@buildingElement.Id" class="btn text-black bg-light border-dark mx-2">Uprav</a>
						<a asp-page="Delete" asp-route-id="@buildingElement.Id" class="btn text-black bg-light border-dark mx-2">Vymaž</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
