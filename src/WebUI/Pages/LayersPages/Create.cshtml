@page
@model WebUI.Pages.LayersPages.CreateModel

<div class="bg-light">
	<form method="post">
		<div class="row fs-1 mx-5 py-5">
			Ďalšia vrstva
		</div>
		<div class="p-5">
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Podlažie:</label>
				<select id="storeys" asp-items="Model.StoreySelectList" class="fs-4 px-2" autofocus>
					<option value="">-- Podlažia --</option>
				</select>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Názov&nbsp;priestoru:</label>
				<select id="spaces" disabled class="fs-4 px-2">
					<option value="">-- Priestory --</option>
				</select>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Teplota:</label>
				<p id="temperature" class="fs-4 px-2 my-3" />
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Stavebná&nbsp;konštrukcia:</label>
				<select id="buildingElements" asp-for="LayerDto.BuildingElementsId" disabled class="fs-4 px-2">
					<option value="">-- Stavebné konštrukcie --</option>
				</select>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Plocha&nbsp;stavebnej&nbsp;konštrukcie:</label>
				<p id="buildingElementArea" class="fs-4 px-2 my-3"></p>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Vedľajší&nbsp;priestor:</label>
				<p class="fs-4 px-2 my-3">-- Vonkajší priestor --</p>
			</div>
			<div classs="my-5" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 mx-3 my-4">Názov&nbsp;vrstvy:</label>
				<input id="name" asp-for="LayerDto.Name" class="form-control fs-4 my-3" />
			</div>
			<div classs="my-5" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 mx-3 my-4">Hrúbka:</label>
				<input id="thickness" asp-for="LayerDto.Thickness" class="form-control fs-4 my-3" oninput="realNumberValidation(this)" />
				<div class="fs-4 mx-2 my-4">m</div>
			</div>
			<div classs="my-5" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 mx-3 my-4">Tep.&nbsp;vodivosť:</label>
				<input id="thermalConductivity" asp-for="LayerDto.ThermalConductivity" class="form-control fs-4 my-3" oninput="realNumberValidation(this)" />
				<div class="fs-4 mx-2 my-4">W/mK</div>
			</div>
			<div classs="my-5" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 mx-3 my-4">Tep.&nbsp;odpor:</label>
				<input id="thermalResistance" asp-for="LayerDto.ThermalResistance" class="form-control fs-4 my-3" oninput="realNumberValidation(this)" />
				<div class="fs-4 mx-2 my-4">m<sup>2</sup>K/W</div>
			</div>
		</div>
		<button id="confirm" type="submit" class="btn btn-secondary float-sm-start m-3">Potvrď</button>
	</form>
</div>
