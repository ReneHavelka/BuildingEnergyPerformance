@page
@model WebUI.Pages.LayerPages.DeleteModel

<div class="bg-light">
	<form method="post">
		<input hidden asp-for="LayerWithBuildingElement.Id" />
		<div class="row fs-1 mx-5 py-5">
			Vymazanie vrstvy stavebej konštrukcie
		</div>

		<div class="p-5">
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<div class="fs-4 m-3">Podlažie:</div>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.StoreyName</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<div class="fs-4 m-3">Názov&nbsp;priestoru:</div>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.SpaceName</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<div class="fs-4 m-3">Teplota:</div>
				<div class="fs-4 py-3">@Model.LayerWithBuildingElement.Temperature °C</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<div class="fs-4 m-3">Stavebná&nbsp;konštrukcia:</div>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.BuildingElementName</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<div class="fs-4 m-3">Plocha&nbsp;stavebnej&nbsp;konštrukcie:</div>
				<div class="fs-4 py-3">@Model.LayerWithBuildingElement.EffectiveArea m2</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Vedľajší&nbsp;priestor:</label>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.ContiguousSpaceName</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Názov&nbsp;vrstvy:</label>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.Name</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Hrúbka:</label>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.Thickness</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Tep.&nbsp;vodivosť:</label>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.ThermalConductivity</div>
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Tep.&nbsp;odpor:</label>
				<div class="form-control fs-4 py-3">@Model.LayerWithBuildingElement.ThermalResistance</div>
			</div>
		</div>
		<button id="confirm" type="submit" class="btn btn-secondary float-sm-start m-3">Potvrď</button>
	</form>
</div>
