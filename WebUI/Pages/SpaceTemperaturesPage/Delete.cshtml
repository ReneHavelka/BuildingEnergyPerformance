@page
@model WebUI.Pages.SpaceTemperaturesPage.DeleteModel

<div class="bg-light">
	<form method="post">
		<input hidden asp-for="SpaceTemperatureDto.Id" />
		<div class="row pl-3">
			<div class="col-6 mx-3">
				<div class="fs-1 mb-5">
					Vymazanie priestoru a teploty
				</div>
			</div>
		</div>
		<div class="p-5">
			<div classs="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Názov&nbsp;priestoru:</label>
				<input asp-for="SpaceTemperatureDto.Name" disabled class="form-control fs-4" />
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:27%">
				<label class="fs-4 m-3">Teplota&nbsp;v&nbsp;priestore:</label>
				<input asp-for="SpaceTemperatureDto.Temperature" disabled class="form-control fs-4" style="text-align:right" />
				<div class="fs-4 my-3">°C</div>
			</div>
		</div>
		<button type="submit" class="btn btn-secondary float-sm-start m-3">Potvrď</button>
	</form>
</div>
