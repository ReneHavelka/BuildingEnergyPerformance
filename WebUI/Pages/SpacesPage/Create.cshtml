@page
@model WebUI.Pages.SpacesPage.CreateModel

<div class="bg-light">
	<form method="post">
		<div class="row pl-3">
			<div class="col-6 mx-3">
				<div class="fs-1 mb-5">
					Ďalší priestor
				</div>
			</div>
		</div>
		<div class="p-5">
			<div class="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Podlažie:</label>
				<select asp-for="SpaceDto.StoreysId" asp-items="Model.StoreysSelectList" class="fs-4 px-2" autofocus">
					<value value=""></value>
				</select>
			</div>
			<div classs="my-3" style="display:flex; flex-direction: row; width:50%">
				<label class="fs-4 m-3">Názov&nbsp;priestoru:</label>
				<input asp-for="SpaceDto.Name" class="form-control fs-4" />
			</div>
			<div class="my-3" style="display:flex; flex-direction: row; width:55%">
				<label class="fs-4 m-3">Teplota&nbsp;v&nbsp;priestore:</label>
				<input id="SpaceTemperature" asp-for="SpaceDto.Temperature" class="form-control fs-4" style="text-align:right" />
				<div class="fs-4 my-3">°C</div>
				<select asp-items="Model.SpaceTemperaturesSelectList" class="fs-5 px-2 mx-4" onchange="document.getElementById('SpaceTemperature').value = value;">
					<option value="">Zoznam priestorov a teplôt</option>
				</select>
			</div>
		</div>
		<button type="submit" class="btn btn-secondary float-sm-start m-3">Potvrď</button>
	</form>
</div>
